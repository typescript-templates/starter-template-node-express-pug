{
  "include": [
    "src/**/*.ts",
    "types/fbgraph.d.ts",
    "types/express-flash.d.ts"
  ],
  "exclude": [
    "spec",
    "test",
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.sample.ts",
    "src/**/sample.ts",
    "src/**/*.example.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": false,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "types",
      "node_modules/@types"
    ]
  }
}